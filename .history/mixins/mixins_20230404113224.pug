mixin tourItem(image, price, title,review, reviewCount, duration, tourPrice)
    .tour-item 
        .tour-top
            img.tour-image(src= image, alt="tour-image")
            span.tour-price= price 
        .tour-contents 
            h3.tour-title= title 
            .tour-rating 
                .tour-review 
                    .tour-star 
                        img(src="./img/star.png", alt="tour-rating")
                    .tour-review-count 
                        span= review
                            | (#{reviewCount} reviews)
                .tour-duration Duration: #{duration}
            a.tour-button(href ="#", rel="noopener noreferrer") Tours Price #{tourPrice}

mixin popularItem()
    .popular-item
        .popular-top
            .popular-overlay
            img.popular-img(src="https://images.unsplash.com/photo-1523906834658-6e24ef2386f9?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=683&q=80")
